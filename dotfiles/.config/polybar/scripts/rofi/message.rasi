/* Confirm Dialog */

@import "colors.rasi"

* {
    background-color:       @bg;
    text-color:             @fg;
	font:				 	"Terminess Nerd Font Mono 16";
}

window {
    width:      			500px;
    padding:    			15px;
    border:					2px;
    border-radius:          0px;
    border-color:           @bc;
    location:               center;
    y-offset:               -2em;
}

entry {
    expand: 				true;
    text-color:				@fg;
}
